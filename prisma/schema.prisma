// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Proof {
  id          Int                @id @default(autoincrement())
  assumption  String
  detailed    String?
  conclusion  String
  arguments   ArgumentsOnProof[]
  comments    Comment[]
  deletedFlag Boolean?           @default(false)
}

model Argument {
  id           Int                @id @default(autoincrement())
  statement    String
  detailed     String?
  comments     Comment[]
  deletedFlag  Boolean?           @default(false)
  usedInProofs ArgumentsOnProof[]
}

model ArgumentsOnProof {
  orderIndex Int      @default(0)
  proof      Proof    @relation(fields: [proofId], references: [id])
  proofId    Int
  argument   Argument @relation(fields: [argumentId], references: [id])
  argumentId Int

  @@id([proofId, argumentId])
}

enum UserRole {
  USER
  POWERUSER
}

model User {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  comments Comment[]
  role     UserRole  @default(USER)
}

model Comment {
  id       Int    @id @default(autoincrement())
  contents String

  proofId    Int?
  argumentId Int?
  userId     Int?
  Proof      Proof?    @relation(fields: [proofId], references: [id])
  Argument   Argument? @relation(fields: [argumentId], references: [id])
  User       User?     @relation(fields: [userId], references: [id])
}
