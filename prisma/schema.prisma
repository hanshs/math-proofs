// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Theorem {
  id      Int    @id @default(autoincrement())
  claim   Claim?
  proof   Proof?
  proofId Int
  claimId Int
}

model Proof {
  id        Int         @id @default(autoincrement())
  theorem   Theorem     @relation(fields: [theoremId], references: [id])
  theoremId Int         @unique
  steps     ProofStep[]
}

model Claim {
  id          Int        @id @default(autoincrement())
  statement   String
  successor   Claim?     @relation("ClaimToClaim", fields: [successorId], references: [id])
  predecessor Claim?     @relation("ClaimToClaim")
  theorem     Theorem?   @relation(fields: [theoremId], references: [id])
  successorId Int?       @unique
  theoremId   Int?       @unique
  definition  ProofStep? @relation(fields: [proofStepId], references: [id])
  proofStepId Int?       @unique
}



model ProofStep {
  id          Int         @id @default(autoincrement())
  definition  Claim?
  explanation String?
  claim       ProofStep[] @relation("ProofStepToProofStep")
  proof       Proof       @relation(fields: [proofId], references: [id])
  proofId     Int
  proofStepId Int?
  ProofStep   ProofStep?  @relation("ProofStepToProofStep", fields: [proofStepId], references: [id])
}
