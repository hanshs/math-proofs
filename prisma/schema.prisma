// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Theorem {
  id      Int         @id @default(autoincrement())
  claim   Claim       @relation(fields: [claimId], references: [id], onDelete: Cascade)
  proof   ProofStep[]
  claimId Int         @unique
}

model ProofStep {
  id          Int      @id @default(autoincrement())
  explanation String?
  claim       Claim[]
  theorem     Theorem? @relation(fields: [theoremId], references: [id], onDelete: Cascade)
  theoremId   Int?
}

model Claim {
  id          Int        @id @default(autoincrement())
  statement   String
  theorem     Theorem?
  successor   Claim?     @relation("ClaimToClaim", fields: [successorId], references: [id], onDelete: Cascade)
  predecessor Claim?     @relation("ClaimToClaim")
  successorId Int?       @unique
  proofStep   ProofStep? @relation(fields: [proofStepId], references: [id], onDelete: Cascade)
  proofStepId Int?
  orderIndex Int?
}
