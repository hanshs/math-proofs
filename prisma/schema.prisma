// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Proof {
  id          Int        @id @default(autoincrement())
  assumption  String
  detailed    String?
  conclusion  String
  arguments   Argument[] @relation("argumentId")
  comments    Comment[]
  deletedFlag Boolean?
  Argument    Argument?  @relation("proofId", fields: [argumentId], references: [id])
  argumentId  Int?
}

model Argument {
  id              Int        @id @default(autoincrement())
  statement       String
  detailed        String?
  usedInArguments Argument[] @relation("ArgumentToArgument")
  usedInProofs    Proof[]    @relation("proofId")
  comments        Comment[]
  deletedFlag     Boolean?
  argumentId      Int?
  Argument        Argument?  @relation("ArgumentToArgument", fields: [argumentId], references: [id])
  Proof           Proof?     @relation("argumentId", fields: [proofId], references: [id])
  proofId         Int?
}

enum UserRole {
  USER
  POWERUSER
}

model User {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  comments Comment[]
  role     UserRole  @default(USER)
}

model Comment {
  id       Int    @id @default(autoincrement())
  contents String

  proofId    Int?
  argumentId Int?
  userId     Int?
  Proof      Proof?    @relation(fields: [proofId], references: [id])
  Argument   Argument? @relation(fields: [argumentId], references: [id])
  User       User?     @relation(fields: [userId], references: [id])
}
